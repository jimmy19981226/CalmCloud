<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9FAFF"
    tools:context=".MainActivity">

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CalmCloud"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

    <!-- Mood Tracking Button -->
    <LinearLayout
        android:id="@+id/moodTrackingLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stressLevelsLayout"
        app:layout_constraintWidth_percent="0.4"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/moodTrackingButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_main_mood_tracking_icon"
            android:background="@drawable/xml_button_selector"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="Mood Tracking" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood Tracking"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Stress Levels Button -->
    <LinearLayout
        android:id="@+id/stressLevelsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toEndOf="@+id/moodTrackingLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/stressLevelsButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_main_stress_levels_icon"
            android:background="@drawable/xml_button_selector"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="Stress Levels" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stress Levels"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Sleep Patterns Button -->
    <LinearLayout
        android:id="@+id/sleepPatternsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@+id/moodTrackingLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dataVisualizationLayout"
        app:layout_constraintWidth_percent="0.4"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/sleepPatternsButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_main_sleep_patterns_icon"
            android:background="@drawable/xml_button_selector"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="Sleep Patterns" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Patterns"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Data Visualization Button -->
    <LinearLayout
        android:id="@+id/dataVisualizationLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@+id/stressLevelsLayout"
        app:layout_constraintStart_toEndOf="@+id/sleepPatternsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/dataVisualizationButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_main_data_visualization_icon"
            android:background="@drawable/xml_button_selector"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="Data Visualization" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Visualization"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
