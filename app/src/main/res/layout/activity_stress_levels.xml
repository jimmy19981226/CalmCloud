<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9FAFF"
    tools:context=".subpage.StressLevelsActivity">

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CalmCloud"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Question -->
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="How's your stress level today?"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appName" />

    <!-- Stress Levels List -->
    <RadioGroup
        android:id="@+id/stressLevelsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/saveButton"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/noStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Stress: ðŸ˜Œ"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/veryLowStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Low Stress: ðŸ™‚"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/lowStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Stress: ðŸ˜"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/moderateStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderate Stress: ðŸ˜•"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/highStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Stress: ðŸ˜Ÿ"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/veryHighStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very High Stress: ðŸ˜¢"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/extremeStress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extreme Stress: ðŸ˜«"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

    </RadioGroup>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#2ACC75"
        android:text="Save"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stressLevelsList" />

    <!-- Reset All Button -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset All"
        android:backgroundTint="#FF5E3A"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
